@model IEnumerable<University.Models.Data.TaiKhoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/HomePage/Admin.cshtml";
}

<h2>Quản Lý Tài Khoản</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên Đăng Nhập
        </th>
        <th>
            Mật Khẩu
        </th>
        <th>
            Loại Tài Khoản
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tenDangNhap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.matKhau)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.loaiTaiKhoan)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.tenDangNhap }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id = item.tenDangNhap }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.tenDangNhap })
        </td>
    </tr>
}

</table>
