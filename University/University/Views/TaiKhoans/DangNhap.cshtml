@model University.Models.Data.TaiKhoan

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/HomePage/Home.cshtml";
}




<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">



    <link rel="shortcut icon" href="img/favicon.html">
    <title>FlatLab - Flat & Responsive Bootstrap Admin Template</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Content/Bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Bootstrap/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/Content/Assets/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/Assets/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/Content/Bootstrap/owl.carousel.css" type="text/css">
    <link href="~/Content/Bootstrap/style-responsive.css" rel="stylesheet" />
    <link href="~/Content/Bootstrap/login-form.css" rel="stylesheet">


</head>
<body>
    <div class="container">
        <div class="card card-container">

            <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card"></p>
            @if (TempData["taikhoan"] != null)
            {
                <script>
                    alert("Tài khoản hoặc mật khẩu không đúng");
                </script>
            }
            @if ((string)Session["loaiTaiKhoan"] == "SinhVien" || (string)Session["loaiTaiKhoan"] == "GiangVien")
            {
                <script>
                    window.location.href = 'http://localhost:56398/SinhVien/TTSV';
                </script>
            }
            else
            {
                using (Html.BeginForm("DangNhap", "TaiKhoans", FormMethod.Post, new { @class = "form-signin" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)



                    <span id="reauth-email" class="reauth-email"></span>
                    <input type="text" name="tenDangNhap" class="form-control" placeholder="Tên Đăng Nhập" required autofocus>
                    <input type="password" name="matKhau" class="form-control" placeholder="Mật Khẩu" required>

                    <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit" name="login">Sign in</button>
                }
            }
            <a href="#" class="forgot-password">
                Forgot the password?
            </a>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>

</html>









