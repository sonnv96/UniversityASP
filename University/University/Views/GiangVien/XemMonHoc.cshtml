@model List<University.Models.ModelViewXemMonHoc>
@{
    ViewBag.Title = "XemMonHoc";
    Layout = "~/Views/HomePage/Home.cshtml";
}


<link rel="stylesheet" href="~/Content/Sass/TrangXemTKB.min.css" />


<div class=" formchon row">

    @using (Html.BeginForm("XemMonHoc", "GiangVien", FormMethod.Post, new { @style = "width:90%;float:left" }))
    {
        <h4 class="col-md-4">Chọn năm học</h4>

        @Html.DropDownList("namhoc", (IEnumerable<SelectListItem>)ViewBag.nam, new { @class = "form-control col-md-5" })
        <h4 class="col-md-4">Chọn học kì</h4>
        @Html.DropDownList("hocKi", (IEnumerable<SelectListItem>)ViewBag.hocKi, new { @class = "form-control col-md-5" })









        <button class="btn btn-primary" type="submit">Xem Lịch dạy</button>
    }

</div>


<table class="table " style="width:95%">
    <tr style="background:orange">

        <th>Giảng Viên</th>
        <th>Phong học</th>
        <th>Ngay Hoc</th>
        <th>Môn học</th>
        <th>Tiết học</th>


    </tr>
@foreach(var item in Model)
    {

    <tr>

        <td>@item.tengiangvien</td>

        <td>@item.ngayhoc</td>
        <td>@item.tenlophp</td>

        <td>@item.tenmonhoc</td>
        <td>@item.tiethoc</td>

        <td>@item.phonghoc</td>



    </tr>
    }
</table>
