    Layout = "~/Views/HomePage/Home.cshtml";
}
<link rel="stylesheet" href="~/Content/Sass/TrangSinhVien.min.css" />


<div class="row">
    <div class="col-md-4">
        <a href="@Url.Action("TTSV","SinhVien")">
            <h3>Thông tin sinh viên</h3>
            <img src="~/Images/sinhvien/student.png" />
        </a>
        <p>Hiển thị các thông tin của Sinh viên</p>
    </div>
    <div class="col-md-4">
        <a href="@Url.Action("XemDiem","SinhVien")">
