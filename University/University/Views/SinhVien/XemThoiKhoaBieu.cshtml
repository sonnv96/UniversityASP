<table class="table " style="width:95%">
    <tr style="background:orange">


        <th>Ngay Hoc</th>
        <th>Môn học</th>
        <th>Tiết học</th>
        <th>Giảng Viên</th>
        <th>Phong học</th>

    </tr>
    @foreach (var item in Model)
    {

        <tr>

            <td>@item.ngayhoc</td>

            <td>@item.monhoc</td>
            <td>@item.tiethoc</td>
            <td>@item.giangvien</td>
            <td>@item.phonghoc</td>



        </tr>
    }
</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

