@model PagedList.IPagedList<University.Models.ModelViewLichHoc>
@using PagedList.Mvc;
@{
    ViewBag.Title = "XemThoiKhoaBieu";
    Layout = "~/Views/HomePage/Home.cshtml";
}

<h2>XemThoiKhoaBieu</h2>







@using (Html.BeginForm("XemThoiKhoaBieu", "SinhVien", FormMethod.Post, new { @style = "width:90%;float:left" }))
{
  
    @Html.DropDownList("nam", (IEnumerable<SelectListItem>)ViewBag.namhoc, new { @class = "form-control" })
    @Html.DropDownList("hocki", (IEnumerable<SelectListItem>)ViewBag.hocki, new { @class = "form-control" })


    



    <button class="btn btn-primary" type="submit">Đồng ý</button>
}

