@model IEnumerable<University.Models.Data.MonHoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/HomePage/Admin.cshtml";
}

<h2>Danh sách môn học</h2>

<p>
    @Html.ActionLink("Thêm Mới", "Create")
</p>

<table class="table">
    <tr>
        <th>Tên Môn</th>
        <th>Chuyên Ngành</th>
        <th>Số Tín Chỉ</th>
        <th>Trạng Thái</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.tenMonHoc</td>
        <td>@item.ChuyenNganh.tenChuyenNganh</td>
        <td>@item.soTinChi</td>
        <td>@item.trangThai</td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.maMonHoc }) |
            @Html.ActionLink("Chi tiết", "Details", new { id = item.maMonHoc }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.maMonHoc })|
            <a href="@Url.Action("MoDKMon", "MonHoc", new {id = item.maMonHoc })">Mở Lớp</a>
        </td>
    </tr>
       
    }


</table>


